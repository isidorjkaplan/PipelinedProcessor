#include <stdio.h>

#include <stdlib.h>

#include <math.h>

#include <float.h>

#include <system.h>

#include <assert.h>



volatile int* dct_write_q = (int*) (AVALON_DCT_NIOS_0_BASE + 8);

volatile int* dct_write_size = (int*) (AVALON_DCT_NIOS_0_BASE);

volatile int* dct_write_data = (int*) (AVALON_DCT_NIOS_0_BASE + 4);



int main(void) {

	printf("Writing Q\n");
    *dct_write_q = 5;
    printf("Writing size\n");

    *dct_write_size = 3;
    printf("Reading Values\n");

    printf("First Term: %x\n", *((volatile short*)(AVALON_DCT_NIOS_0_BASE)));
    printf("Second Term: %x\n", *((volatile short*)(AVALON_DCT_NIOS_0_BASE + 4)));
    printf("Third Term Term: %x\n", *((volatile short*)(AVALON_DCT_NIOS_0_BASE + 8)));


    return 0;

}
